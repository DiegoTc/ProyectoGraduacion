<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/exclude.jsp</pattern>
        <pattern>/exclude/*</pattern>
    </excludes>

    <decorator name="masterpage" page="masterpage.jsp">
        <pattern>/index.jsp</pattern>
        <pattern>/dispositivos/dispositivoXBee.jsp</pattern>
        <pattern>/dispositivos/dispositivoLuces.jsp</pattern>
        <pattern>/dispositivos/dispositivoTomacorrientes.jsp</pattern>
        <pattern>/acciones/lights.jsp</pattern>
    </decorator>
    

    
</decorators>
